# NPM Configuration
# This file configures npm to work correctly with pnpm and prevents
# warnings about environment config variables

# Keep warnings visible but configure npm properly
loglevel=warn

# Registry configuration
registry=https://registry.npmjs.org/

# Performance and security settings
prefer-offline=false
audit=true
fund=false

# Engine strict mode (respect engines field in package.json)
engine-strict=true

# Package installation settings
save-exact=false
package-lock=false

# Progress and output
progress=true
