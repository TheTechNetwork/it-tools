{
  "configMigration": true,
  "branchConcurrentLimit": 5,
  "prHourlyLimit": 25,
  "recreateWhen": "always",
  "prCreation": "immediate",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies"
  ],
  "packageRules": [
    {
      "groupName": "TypeScript toolchain",
      "matchPackageNames": ["typescript", "vue-tsc"],
      "matchUpdateTypes": ["major", "minor", "patch"]
    }
  ]
}
